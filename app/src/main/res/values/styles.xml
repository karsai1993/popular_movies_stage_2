<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="detail_activity_field_layout" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingBottom">@dimen/detail_activity_inner_dist</item>
    </style>

    <style name="detail_activity_field_left_right_label" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">@dimen/common_layout_weight</item>
        <item name="android:paddingLeft">@dimen/detail_activity_side_dist</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/detail_activity_field_label_text_size</item>
    </style>

    <style name="detail_activity_field_left_right_value" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">@dimen/common_layout_weight</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingRight">@dimen/detail_activity_side_dist</item>
    </style>

    <style name="detail_activity_field_up_down_label" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/detail_activity_side_dist</item>
        <item name="android:paddingRight">@dimen/detail_activity_side_dist</item>
        <item name="android:paddingStart">@dimen/detail_activity_side_dist</item>
        <item name="android:textSize">@dimen/detail_activity_field_label_text_size</item>
    </style>

    <style name="detail_activity_field_up_down_value" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/detail_activity_side_dist</item>
        <item name="android:paddingRight">@dimen/detail_activity_side_dist</item>
        <item name="android:paddingBottom">@dimen/detail_activity_inner_dist</item>
    </style>

    <style name="detail_activity_image_view" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="activity_text_view" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">invisible</item>
        <item name="android:textSize">@dimen/response_error_message_text_size</item>
    </style>

    <style name="review_list_item" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="video_list_item" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>
